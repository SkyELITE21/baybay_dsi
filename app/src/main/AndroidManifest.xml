        <activity
            android:name=".game_engine.Map"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
			android:name=".AboutGame"/>
		<activity
			android:name=".GameSettings"/>
		<activity
			android:name=".GameVariables"/>
		<activity
			android:name=".LoadingScreen"/>
		<activity
			android:name=".MainActivity"/>
		<activity
			android:name=".MainGame"/>
		<activity
			android:name=".SplashLoadingScreen"/>
		<activity
			android:name=".PostSpanishColonial"/>
		<activity
			android:name=".PreColonial"/>
		<activity
			android:name=".SpanishColonial"/>
    </application>
	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>
